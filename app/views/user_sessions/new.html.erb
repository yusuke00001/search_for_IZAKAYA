<div class="text-center">
  <h1><%= t('.title') %>
</div>
<div class="card mx-auto" style="max-width: 500px; boxshadow: 0px 4px 10px rgba(0,0,0,0.1);">
  <div class="card-body">
    <%= form_with  url: login_path, class: "needs-validation" do |form| %>
      <div class="mb-3">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>
      <%= form.submit "ログイン"%>
    <% end %>
  </div>
</div>
<% if signed_in? %>
  <%= link_to "ログアウト", logout_path , data: { turbo_method: :delete } %>
<% end %>