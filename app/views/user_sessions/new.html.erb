<div class="card mx-auto" style="width: 400px; boxshadow: 0px 4px 10px rgba(0,0,0,0.1); margin-top: 100px;">
  <div class="card-body">
    <div class="text-center mb-5">
      <h1><%= t('.title') %>
    </div>
    <%= form_with  url: login_path, class: "needs-validation" do |form| %>
      <div class="mb-5">
        <%= form.label :email, class: "form-label" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
      <div class="mb-5">
        <%= form.label :password, class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>
      <div class="text-center mb-3">
        <%= form.submit t('.login'), class:"btn btn-primary"%>
      </div>
      <div class="text-center mb-3">
        <%= link_to t('.submit'), new_user_path %>
      </div>
    <% end %>
  </div>
</div>
